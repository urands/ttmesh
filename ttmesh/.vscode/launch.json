{
  // Debug/run configurations for Cursor (VS Code)
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Node (gcflags -N -l)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/ttmesh-node",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-gcflags=all=\"-N -l\"",
      "env": {}
    },
    {
      "name": "Debug CLI (gcflags -N -l)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/ttmesh-ctl",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-gcflags=all=\"-N -l\"",
      "env": {}
    },
    {
      "name": "Test (Debug, package)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-gcflags=all=\"-N -l\"",
      "args": ["-v"]
    },
    {
      "name": "Test (Release, package)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "args": ["-v"]
    }
  ]
}
